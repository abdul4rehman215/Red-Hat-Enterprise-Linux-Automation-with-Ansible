[mysqld]
bind-address = {{ mysql_bind_address }}
port = {{ mysql_port }}
local-infile = 0
skip-show-database
skip-symbolic-links = 1
# Security settings
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
# Performance settings
max_connections = 200
innodb_buffer_pool_size = 256M
